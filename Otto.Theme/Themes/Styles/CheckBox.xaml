<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:theme="clr-namespace:Otto.Theme.Themes">

    <ResourceDictionary.MergedDictionaries>
        <theme:SharedResourceDictionary Source="pack://application:,,,/Otto.Theme;component/Themes/Styles/Base/CheckBoxBaseStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource CheckBoxBaseStyle}" TargetType="{x:Type CheckBox}" />
</ResourceDictionary>