<UserControl
    x:Class="Otto.Theme.Controls.TextSeparator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Otto.Theme.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=controls:TextSeparator}"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="10,0,10,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{DynamicResource BrushBlue}"
            Text="{Binding Header}" />
        <Rectangle
            Grid.Column="1"
            Height="1"
            Margin="0,5,0,0"
            VerticalAlignment="Center"
            Fill="{DynamicResource BrushBorderLight}" />
    </Grid>
</UserControl>
